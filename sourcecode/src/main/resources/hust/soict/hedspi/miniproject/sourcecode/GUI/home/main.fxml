<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hust.soict.hedspi.miniproject.sourcecode.GUI.home.HomeController">
    <MenuBar layoutX="10.0" layoutY="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
             AnchorPane.topAnchor="0"
    >
        <menus>
            <Menu mnemonicParsing="false" text="Trợ giúp">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showBasicUsage" text="Cách sử dụng cơ bản"/>
                    <MenuItem mnemonicParsing="false" onAction="#showIntendedUse" text="Mục đích của ứng dụng"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <VBox alignment="TOP_CENTER" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="35.0">
        <HBox alignment="CENTER" spacing="20">
            <StackPane prefHeight="480.0" prefWidth="400.0">
                <children>
                    <ImageView fitHeight="278.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@LipidVirus.png"/>
                        </image>
                    </ImageView>
                    <AnchorPane prefHeight="200.0" prefWidth="200.0">
                        <children>
                            <Button layoutX="136.0" layoutY="388.0" mnemonicParsing="false"
                                    onAction="#chooseLipidVirus"
                                    prefHeight="46.0" prefWidth="127.0" text="Chọn" textFill="#1e1f20">
                                <font>
                                    <Font size="22.0"/>
                                </font>
                            </Button>
                            <Text layoutX="170.0" layoutY="69.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Có vỏ lipit">
                                <font>
                                    <Font size="28.0"/>
                                </font>
                            </Text>
                        </children>
                    </AnchorPane>
                </children>
            </StackPane>
            <StackPane layoutX="400.0" prefHeight="480.0" prefWidth="400.0">
                <children>
                    <ImageView fitHeight="480.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@LipidVirus.png"/>
                        </image>
                    </ImageView>
                    <AnchorPane prefHeight="200.0" prefWidth="200.0">
                        <children>
                            <Button layoutX="135.0" layoutY="384.0" mnemonicParsing="false"
                                    onAction="#chooseNonLipidVirus" prefHeight="46.0" prefWidth="127.0" text="Chọn">
                                <font>
                                    <Font size="22.0"/>
                                </font>
                            </Button>
                            <Text layoutX="143.0" layoutY="71.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Không có vỏ Lipit">
                                <font>
                                    <Font size="28.0"/>
                                </font>
                            </Text>
                        </children>
                    </AnchorPane>
                </children>
            </StackPane>
        </HBox>
        <Button layoutX="299.0" layoutY="548.0" mnemonicParsing="false" onAction="#exitApplication" prefHeight="25.0"
                prefWidth="201.0" text="Thoát ứng dụng" textFill="#1e1f20">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
    </VBox>
</AnchorPane>
